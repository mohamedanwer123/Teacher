<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/money"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num2"
                android:layout_width="50dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#eeeef4"
                android:textSize="20dp"
                android:background="@drawable/style"
                android:textStyle="italic" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/name2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#eeeef4"
                android:textSize="20dp"
                android:background="#dd1321"
                android:textStyle="italic" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="ادفع"
        android:textColor="#eeeef4"
        android:textSize="20dp"
        android:textStyle="italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-32dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/chechbox_pay"
        android:background="@drawable/style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pay_finish"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/style"
            android:text="انـهـاء"
            android:textColor="#fff" />

        <Button
            android:id="@+id/login_pay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/style"
            android:text="تسجيل الدفع"
            android:textColor="#fff" />
    </LinearLayout>

    <TextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="20dp"
    android:text="عدد مرات الدفع"
    android:textColor="#eeeef4"
    android:textSize="20dp"
    android:textStyle="italic" />

    <TextView
        android:id="@+id/num_pay"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/style"
        android:gravity="center"
        android:textSize="20dp" />


</LinearLayout>