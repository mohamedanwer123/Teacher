<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_mark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/markmark"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num3"
                android:layout_width="50dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#eeeef4"
                android:textSize="20dp"
                android:background="@drawable/style"
                android:textStyle="italic" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/name3"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#eeeef4"
                android:textSize="20dp"
                android:background="#dd1321"
                android:textStyle="italic" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/grade1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/style"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="/"
            android:textColor="#fff"
            android:textSize="40dp" />

        <EditText
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/grade2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/style"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mark_finish"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/style"
            android:text="انـهـاء"
            android:textColor="#fff" />

        <Button
            android:id="@+id/login_mark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/style"
            android:text="تسجيل الدرجات"
            android:textColor="#fff" />
    </LinearLayout>

   <TextView
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="درجات الطالب"
       android:gravity="center"
       android:textColor="#fff"
       android:textSize="20dp"
      ></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/lv_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"></TextView>
    </ScrollView>


</LinearLayout>